<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="CrashDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@color/crashBgColor</item>
        <item name="android:textColor">@color/crashTxtColor</item>
    </style>

    <color name="crashBgColor">#E4756D</color>
    <color name="crashTxtColor">#85150C</color>
</resources>
